<!--
    Make a section for concatenated resting-state data.

    Inputs:
    - prereg_img
    - postreg_img
-->
<section id="Concatenated BOLD">
    <div class="w3-row-padding">
        <div class="w3-col l1 label2"><br>Combined Resting State Data</div>

            <div class="w3-quarter">
                <div class="w3-row w3-center label1">Pre-Regression</div>
                <div class="w3-row"></div>
                {% if prereg_img != "None" %}
                    <img src="{{ prereg_img }}" onclick="open_img_modal_to_index(1)">
                {% else %}
                    <div class="w3-container w3-pale-red label3">Image Not Available</div>
                    <div class="w3-container w3-pale-red label3"><br></div>
                {% endif %}
                </div>
            </div>

            <div class="w3-quarter">
                <div class="w3-row w3-center label1">Post-Regression</div>
                <div class="w3-row"></div>
                {% if prereg_img != "None" %}
                    <img src="{{ postreg_img }}" onclick="open_img_modal_to_index(2)">
                {% else %}
                    <div class="w3-container w3-pale-red label3">Image Not Available</div>
                    <div class="w3-container w3-pale-red label3"><br></div>
                {% endif %}
                </div>
            </div>

        </div>
    </div>
</section>
